<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefWidth="540.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.nagy_gabor.nagygabor_etlap.Controllers.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
      <HBox minHeight="30.0" prefHeight="30.0" spacing="10.0">
         <children>
            <Button fx:id="ujfelvetel" maxWidth="100.0" minWidth="100.0" mnemonicParsing="false" onAction="#onUjFelvetelButtonClick" prefWidth="100.0" text="Új étel felvétele" />
            <Button fx:id="torles" maxWidth="100.0" minWidth="100.0" mnemonicParsing="false" onAction="#onTorlesbuttonClick" prefWidth="100.0" text="Törlés" />
         </children>
      </HBox>
      <TitledPane animated="false" maxHeight="120.0" minHeight="120.0" prefHeight="120.0" text="Áremelés" VBox.vgrow="ALWAYS">
        <content>
          <AnchorPane maxHeight="90.0" maxWidth="400.0" minHeight="90.0" minWidth="400.0" prefHeight="90.0" prefWidth="219.0">
            <children>
               <GridPane maxHeight="90.0" minHeight="90.0" prefHeight="90.0" prefWidth="400.0">
                 <columnConstraints>
                   <ColumnConstraints hgrow="SOMETIMES" maxWidth="160.0" minWidth="160.0" prefWidth="160.0" />
                     <ColumnConstraints hgrow="SOMETIMES" maxWidth="204.0" minWidth="10.0" prefWidth="25.0" />
                   <ColumnConstraints hgrow="SOMETIMES" maxWidth="214.0" minWidth="10.0" prefWidth="214.0" />
                 </columnConstraints>
                 <rowConstraints>
                   <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                   <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                 </rowConstraints>
                  <children>
                      <Spinner editable="true" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0">
                          <valueFactory>
                              <SpinnerValueFactory.IntegerSpinnerValueFactory amountToStepBy="5" max="50" min="5" />
                          </valueFactory>
                        <GridPane.margin>
                           <Insets left="10.0" top="5.0" />
                        </GridPane.margin>
                      </Spinner>
                      <Spinner editable="true" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1">
                          <valueFactory>
                              <SpinnerValueFactory.IntegerSpinnerValueFactory amountToStepBy="50" max="3000" min="50" />
                          </valueFactory>
                        <GridPane.margin>
                           <Insets bottom="5.0" left="10.0" />
                        </GridPane.margin>
                      </Spinner>
                     <Label text="\%" GridPane.columnIndex="1">
                        <GridPane.margin>
                           <Insets left="5.0" />
                        </GridPane.margin></Label>
                     <Label text="Ft" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <GridPane.margin>
                           <Insets left="5.0" />
                        </GridPane.margin></Label>
                     <Button maxWidth="100.0" minWidth="100.0" mnemonicParsing="false" onAction="#onButtonClickSzazalekEmeles" prefWidth="100.0" text="Emelés" GridPane.columnIndex="2">
                        <GridPane.margin>
                           <Insets top="5.0" />
                        </GridPane.margin></Button>
                     <Button maxWidth="100.0" minWidth="100.0" mnemonicParsing="false" onAction="#onButtonClickFtEmeles" prefWidth="100.0" text="Emelés" GridPane.columnIndex="2" GridPane.rowIndex="1">
                        <GridPane.margin>
                           <Insets bottom="5.0" />
                        </GridPane.margin></Button>
                  </children>
               </GridPane>
            </children>
            </AnchorPane>
        </content>
      </TitledPane>
      <TableView minHeight="200.0" prefHeight="200.0" prefWidth="500.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colNev" minWidth="50.0" prefWidth="200.0" text="Név" />
          <TableColumn fx:id="colKategoria" minWidth="50.0" prefWidth="150.0" text="Kategória" />
            <TableColumn fx:id="colAr" minWidth="50.0" prefWidth="75.0" text="Ár (Ft)" />
        </columns>
      </TableView>
</VBox>
